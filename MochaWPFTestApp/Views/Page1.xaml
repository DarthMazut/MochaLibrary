<UserControl x:Class="MochaWPFTestApp.Views.Page1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MochaWPFTestApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="{Binding Text}" FontSize="48" HorizontalAlignment="Center" Margin="10" />
            <TextBox Text="{Binding Input, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="36" VerticalContentAlignment="Center" FontSize="18" Margin="10"/>
            <Button Content="Navigate" Width="200" Height="45" Margin="10" Command="{Binding NavigateCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
