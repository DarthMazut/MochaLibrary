<Window x:Class="MochaWPFTestApp.Views.Dialogs.MyCustomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MochaWPFTestApp.Views.Dialogs"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        x:Name="xe_MyDialog"
        Title="MyCustomDialog" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding DialogParameters.Title}" FontSize="36" Margin="16"/>

        <TextBlock Grid.Row="1" Text="{Binding DialogParameters.Message}" Margin="8" />

        <Border Grid.Row="2" Height="1" Margin="10,0,10,0" BorderThickness="1" BorderBrush="Gray" VerticalAlignment="Top" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="16">
            <Button Content="Open" Width="120" Height="35" Margin="5" Command="{Binding OpenDialogCommand}"/>
            <Button Content="Close" Width="120" Height="35" Margin="5" Command="{Binding CloseDialogCommand}"/>
        </StackPanel>

    </Grid>
</Window>
